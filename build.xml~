<project>

    <property name="adPath" value="Engine/"/>
    <property name="version" value="0.3.8"/>
    <property name="src.dir"     value="${adPath}src"/>
    <property name="lib.dir" value="${adPath}lib"/>
    <property name="outputFile" value="EJEngine${version}.jar"/>

    <property name="build.dir"   value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="res.dir" value="${build.dir}/res"/>
    <property name="jar.dir"     value="${build.dir}/jar"/>

    <property name="main-class"  value="fls.engine.main.Init"/>

    <path id="libs">
      <fileset dir="${lib.dir}" includes="**/*.jar"/>
      <fileset dir="${src.dir}/"/>
    </path>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="libs"/>
        <copy todir="${classes.dir}">
        <fileset dir="${src.dir}">
            <include name="*.png"/>
          </fileset>
        </copy>
    </target>

    <target name="jar">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${outputFile}" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
        </jar>
    </target>

    <target name="build" depends="clean,compile,jar"/>
</project>
